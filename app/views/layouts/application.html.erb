<!DOCTYPE html>
<html>
  <head>
    <title>ManyoCoTrainingExam</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if logged_in? %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
          <%= link_to t('view.task_manager'), tasks_path, class: "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <%= link_to t('view.tasks'), tasks_path, class: "nav-link" %>
              <li class="nav-item">
                <%= link_to t('view.account_details'),tasks_path, class: "nav-link" %> <!--代理で一覧へのリンク -->
              </li>
              <li class="nav-item">
                <%= link_to t('view.logout'), session_path(current_user.id), method: :delete, class: "nav-link" %> <!--代理で一覧へのリンク -->
              </li>
            </ul>
          </div>
        </nav>
      <% else %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
          <p class="navbar-brand"><%= t('view.task_manager') %></p>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <%= link_to t('view.login'), new_session_path, class: "nav-link" %>
              <li class="nav-item">
                <%= link_to t('view.sign_up'), new_user_path, class: "nav-link" %> <!--代理で一覧へのリンク -->
              </li>
            </ul>
          </div>
        </nav>
      <% end %>
    </header>
    <main>
    <%= yield %>
    </main>
  </body>
</html>
