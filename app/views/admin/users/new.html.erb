<h2><%= t('view.admin.create_user') %></h2>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= t("errors.template.header", model: User.model_name.human, count: @user.errors.count) %></h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:admin, @user], url: {controller: 'users', action: 'index'}, local: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "作成" %>
<% end %>


<%= link_to t('view.back'), admin_users_path %>
